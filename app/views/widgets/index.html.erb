<h1>Widget List</h1>
<%= link_to "Add Widget", "/widgets/new"%>
<table>
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>User ID</th>
		<th>Source</th>
		<th>Widget Type</th>
		<th>Delete</th>
	</tr>
	<% if @widgets.exists? %>
		<% @widgets.each do |widget| %>
			<tr>
				<td><%= widget.id %></td>
				<td><a href='widgets/<%= widget.id %>'><%= widget.name %></a></td>
				<td><%= widget.userid %></td>
				<td><%= widget.sources %></td>
				<td><%= widget.widget_type %></td>
				<td>
					<%= form_tag("/widgets/#{widget.id}",  method: "put") do %>
					<%= hidden_field_tag(:delete, "true") %>
					<%= submit_tag "Remove Widget"%>
					<% end %>
				</td>
			</tr>
		<% end %>
	<% end%>
</table>
